<h1>Create Course</h1>


<form action="/teacher/createCourse" method="post" class="col-md-6">

  {{#if created}}
    <p class="alert alert-success"><span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>  {{ created }} </p>
  {{/if}}
  {{#if course }}
    <p class="alert alert-danger"><span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>  {{ course }} </p>
  {{/if}}

  <div class="form-group">
    <button class="btn btn-primary tip">Show Example</button>
  </div>

  <div class="form-group well hidden">
    <b>Course Name:</b> Introduction to Business<br>
    <b>Course Code:</b> BUSI 101
  </div>

  <div class="form-group">
    <label for="name">Course Name</label>
    <input type="text"  class="form-control" name="name" placeholder="Name" required>
  </div>

  <div class="form-group">
    <label for="course-code">Course Code</label>
    <input type="text" class="form-control" name="code" placeholder="Course Code" required>
  </div>

  <div class="form-group text-center">
    <button class="btn btn-primary" id="submit">Submit</button>
  </div>
</form>

{{#section 'script'}}
  <script type="application/javascript">
      $('.tip').click(function(e) {
        e.preventDefault();
        $('.well').toggleClass('hidden');
      })
  </script>
{{/section}}
