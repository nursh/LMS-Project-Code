<div class="container">

    <div class="">
      <a href="/teacherCourse/testTemplates" class="btn btn-primary">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        Back to Templates
      </a>
    </div>

    <!-- Page Title -->
    <div class="row">
      <div id="questions" class="col-md-8">
        <h2>Basic Template</h2>
      </div>

      <div class="col-md-8">
        {{#if qsucc}}
          <p class="alert alert-success"><span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>  {{ qsucc }} </p>
        {{/if}}

        {{#if qfail }}
          <p class="alert alert-danger"><span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>  {{ qfail }} </p>
        {{/if}}
      </div>
    </div>

    <!-- Types of Questions -->
    <div class="row col-md-8" id="question-format">
      <ul class="nav nav-pills qtype">
        <li role="presentation" class="active" id="multichoice"><a href="#">Multiple choice</a></li>
        <li role="presentation" id="truefalse"><a href="#">True or False</a></li>
        <li role="presentation" id="fillblanks"><a href="#">Fill in the blank space</a></li>
      </ul>
    </div>


    <!-- Tips for question format -->
    <div class="row">
      <div class="col-md-8">
        <button class="btn btn-primary" id="tips" type="button" data-toggle="collapse" data-target="#question-tips" aria-expanded="false" aria-controls="question-tips">
          Tips
        </button>
        <div class="collapse" id="question-tips">
          <div class="well" id="multichoice-tips">
            <p>Multiple choice questions consists of a question and multiple options to choose from.</p>
          </div>

          <div class="well" id="true-or-false-tips" style="display: none;">
            <p>True or False requires answering a question by choosing between true or false.</p>
          </div>

          <div class="well"  id="fill-blanks-tips" style="display: none;">
              <p>Fill in the blank questions require filling the given blank space with the most appropriate answer.</p>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <form class="col-md-8" method="post" action="/teachercourse/questions">
        <!-- Enter Question textarea -->

        <div class="form-group">
          <label for="question">Enter question</label><br>
          <textarea name="question" rows="4" cols="25" class="form-control"></textarea>
        </div>

        <div class="form-group" id="points">
          <!-- Select number of option boxes -->
          <label for="" class="options-select">Select number of options:</label>
          <select id="choices_num" name="" class="options-select">
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5" selected>5</option>
          </select>

          <!-- Points box  -->
          <div class="input-group col-md-3 pull-right pointer">
            <input type="number" class="form-control" placeholder="Point(s)" min="0" name="points" >
            <span class="input-group-addon">Point(s)</span>
          </div>
        </div>

        <div class="form-group" id="format">

          <!-- Options for the multiple choice question format -->
          <div  id="options">
            <div class="input-group choices">
              <span class="input-group-addon"> <input type="radio" name="choices" > </span>
              <input type="text" class="form-control opmc" placeholder="Option">
            </div>
            <div class="input-group choices">
              <span class="input-group-addon"> <input type="radio" name="choices" > </span>
              <input type="text" class="form-control opmc" placeholder="Option">
            </div>
            <div class="input-group choices">
              <span class="input-group-addon"> <input type="radio" name="choices" > </span>
              <input type="text" class="form-control opmc" placeholder="Option">
            </div>
            <div class="input-group choices">
              <span class="input-group-addon"> <input type="radio" name="choices" > </span>
              <input type="text" class="form-control opmc" placeholder="Option">
            </div>
            <div class="input-group choices">
              <span class="input-group-addon"> <input type="radio" name="choices" > </span>
              <input type="text" class="form-control opmc" placeholder="Option">
            </div>
            <input type="hidden" id="allmc" name="allmc">
          </div>

          <!-- True or False questions -->
          <div id="tof" style="display: none;">
              <select class="form-control" name="tof">
                <option value="True" selected>True</option>
                <option value="False">False</option>
              </select>
          </div>

          <!-- Short answer questions -->
          <div id="fitb" style="display: none;">
            <input type="text" class="form-control" name="blanks" placeholder="Answer">
          </div>

          <input type="hidden" name="qtype" class="qtype" value="MultiChoice">
        </div>

        <!-- Feedback box  -->
        <div class="form-group">
          <input type="text" name="feedback" class="form-control" placeholder="Feedback">
        </div>

        <!-- Submit Question box -->
        <div class="form-group">
          <button class="btn btn-success pull-right" name="button">Submit question</button>
        </div>

        <div class="form-group" id="test-preview">
          <a href="#" class="btn btn-primary pull-left" name="button">Test Preview</a>
        </div>

      </form>
    </div>

</div>

{{#section 'maker'}}
  <link rel="stylesheet" href="/css/editor.css">
{{/section}}

{{#section 'script'}}
  <script src="/js/editor.js"></script>
{{/section}}
